#!/usr/bin/env ruby

require 'pry'

require_relative '../config'

require 'game_data'
require 'project_stat_data'
require 'stats_from_data'
require 'stat_reporter'

game_data_files = Dir[ File.expand_path('../../data/cycle-*.csv', __FILE__) ]
proj_stat_files = Dir[ File.join(STATS_PATH, 'projects', '*.csv') ]

gd = GameData.import(game_data_files)
psd = ProjectStatData.import(proj_stat_files)
s = StatsFromData.new(gd)
sr = StatReporter.new(s)
binding.pry
